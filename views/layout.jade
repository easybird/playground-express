doctype html
html
  head
    title= title
    <!--Import Google Icon Font-->
    link(rel='stylesheet' href=layout.font)

    <!--Import materialize.css-->
    link(rel='stylesheet' type='text/css' href=layout.cssFramework media='screen,projection')

    link(rel='stylesheet' type='text/css' href=layout.css media='screen,projection')

    <!--Let browser know website is optimized for mobile-->
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
  body
    block header
        include ./header/defaultHeader
    block content
        main: div.container: div.row
            div.col.s12.m9.l10
                block mainContent
                    include ./content/mainContent/defaultMainContent
    block footer
        include ./footer/defaultFooter

    <!--Import jQuery before materialize.js-->
    script(type='text/javascript' src=layout.jquery)
    script(type='text/javascript' src=layout.cssFrameworkJs)
    script(type='text/javascript' src=layout.cssJs)

